doctype html
html
  head
    title= title
    script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.2.1/react.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.2.1/react-dom.js')

    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    // navbar start //
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
            span.sr-only
              Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href="#") BaseNote
        .collapse.navbar-collapse#navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/") Home
            li
              a(href="/notes") Notes
            li
              a(href="/companies") Companies
            if(user)
              li
                a(href="/notes/new") Create Note
            if(user)
              li
                a(href="/companies/new") Add Company

          ul.nav.navbar-nav.navbar-right
            if(user)
              li 
                a(href="#") Hello, #{user.fullName()}
              li
                a(href="/users/logout") Sign Out
            else
              li
                a(href="/users/login") Sign In
              li
                a(href="/users/register") Sign Up
    // navbar end //
    .container
      block content

    // end scripts -- bootstrap -- //
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='../javascripts/bootstrap.min.js')



