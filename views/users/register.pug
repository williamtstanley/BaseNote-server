extends ../layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/users/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="firstName", placeholder='First Name')
      .form-group
          input.form-control(type='text', name="lastName", placeholder='Last Name')
      .form-group
          input.form-control(type='text', name="email" placeholder='Email Address')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
       
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    h4=info
